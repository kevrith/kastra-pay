generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ──────────────────────────────────────────
// ENUMS
// ──────────────────────────────────────────

enum UserRole {
  SUPER_ADMIN
  MERCHANT
  CUSTOMER
}

enum MerchantStatus {
  PENDING
  ACTIVE
  SUSPENDED
  DEACTIVATED
}

enum PaymentMethod {
  MPESA_STK
  MPESA_C2B
  FLUTTERWAVE_CARD
  FLUTTERWAVE_MOBILE_MONEY
  PAYSTACK_CARD
  PAYSTACK_MOBILE_MONEY
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  REVERSED
}

enum RefundStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum PaymentLinkStatus {
  ACTIVE
  EXPIRED
  DISABLED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  PAYMENT_INITIATED
  PAYMENT_COMPLETED
  PAYMENT_FAILED
  REFUND_INITIATED
  REFUND_COMPLETED
  API_KEY_GENERATED
  API_KEY_REVOKED
  MERCHANT_APPROVED
  MERCHANT_SUSPENDED
}

// ──────────────────────────────────────────
// AUTH MODELS (NextAuth)
// ──────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  phone         String?   @unique
  role          UserRole  @default(CUSTOMER)
  avatar        String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  merchant      Merchant?
  transactions  Transaction[]
  notifications Notification[]
  auditLogs     AuditLog[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ──────────────────────────────────────────
// BUSINESS MODELS
// ──────────────────────────────────────────

model Merchant {
  id                  String         @id @default(cuid())
  userId              String         @unique
  businessName        String
  slug                String         @unique
  businessEmail       String
  businessPhone       String?
  description         String?        @db.Text
  logo                String?
  website             String?
  status              MerchantStatus @default(PENDING)

  // Settlement info
  settlementEmail     String?
  settlementPhone     String?
  settlementBankCode  String?
  settlementAccountNo String?

  // Provider config (encrypted at app level)
  mpesaShortCode       String?
  mpesaPasskey         String?
  flutterwaveSubAcctId String?
  paystackSubAcctCode  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKeys       ApiKey[]
  transactions  Transaction[]
  paymentLinks  PaymentLink[]
  refunds       Refund[]
  webhookEvents WebhookEvent[]

  @@index([slug])
  @@index([status])
  @@map("merchants")
}

model ApiKey {
  id         String    @id @default(cuid())
  merchantId String
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())

  merchant Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([keyHash])
  @@index([merchantId])
  @@map("api_keys")
}

model Transaction {
  id               String            @id @default(cuid())
  merchantId       String
  customerId       String?
  paymentLinkId    String?
  idempotencyKey   String            @unique
  amount           Decimal           @db.Decimal(12, 2)
  currency         String            @default("KES")
  platformFee      Decimal?          @db.Decimal(12, 2)
  providerFee      Decimal?          @db.Decimal(12, 2)
  netAmount        Decimal?          @db.Decimal(12, 2)
  paymentMethod    PaymentMethod
  status           TransactionStatus @default(PENDING)
  providerRef      String?
  providerResponse Json?
  mpesaCheckoutReqId String?
  mpesaReceiptNumber String?
  customerEmail    String?
  customerPhone    String?
  customerName     String?
  description      String?
  metadata         Json?
  failureReason    String?
  completedAt      DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  merchant    Merchant     @relation(fields: [merchantId], references: [id])
  customer    User?        @relation(fields: [customerId], references: [id])
  paymentLink PaymentLink? @relation(fields: [paymentLinkId], references: [id])
  refunds     Refund[]
  receipt     Receipt?
  webhookEvents WebhookEvent[]

  @@index([merchantId, status])
  @@index([merchantId, createdAt])
  @@index([customerId])
  @@index([providerRef])
  @@index([mpesaCheckoutReqId])
  @@index([idempotencyKey])
  @@map("transactions")
}

model Refund {
  id               String       @id @default(cuid())
  transactionId    String
  merchantId       String
  amount           Decimal      @db.Decimal(12, 2)
  reason           String?
  status           RefundStatus @default(PENDING)
  providerRef      String?
  providerResponse Json?
  failureReason    String?
  initiatedBy      String
  completedAt      DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  transaction Transaction @relation(fields: [transactionId], references: [id])
  merchant    Merchant    @relation(fields: [merchantId], references: [id])

  @@index([transactionId])
  @@index([merchantId, status])
  @@map("refunds")
}

model PaymentLink {
  id           String            @id @default(cuid())
  merchantId   String
  code         String            @unique
  title        String
  description  String?
  amount       Decimal?          @db.Decimal(12, 2)
  currency     String            @default("KES")
  status       PaymentLinkStatus @default(ACTIVE)
  maxPayments  Int?
  paymentCount Int               @default(0)
  expiresAt    DateTime?
  metadata     Json?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  merchant     Merchant      @relation(fields: [merchantId], references: [id])
  transactions Transaction[]

  @@index([code])
  @@index([merchantId])
  @@map("payment_links")
}

model WebhookEvent {
  id            String    @id @default(cuid())
  merchantId    String?
  transactionId String?
  provider      String
  eventType     String
  payload       Json
  headers       Json?
  status        String    @default("received")
  attempts      Int       @default(0)
  processedAt   DateTime?
  error         String?
  createdAt     DateTime  @default(now())

  merchant    Merchant?    @relation(fields: [merchantId], references: [id])
  transaction Transaction? @relation(fields: [transactionId], references: [id])

  @@index([provider, status])
  @@index([transactionId])
  @@index([createdAt])
  @@map("webhook_events")
}

model Receipt {
  id            String    @id @default(cuid())
  transactionId String    @unique
  receiptNumber String    @unique
  pdfUrl        String?
  emailSentAt   DateTime?
  createdAt     DateTime  @default(now())

  transaction Transaction @relation(fields: [transactionId], references: [id])

  @@map("receipts")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  actionUrl String?
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("notifications")
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String?
  action    AuditAction
  entity    String
  entityId  String?
  oldValue  Json?
  newValue  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime    @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entity, entityId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
